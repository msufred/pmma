<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.gemseeker.pmma.ui.components.*?>

<StackPane fx:id="container" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox id="contentView" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="1000.0" styleClass="background" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="toolbarLeft" alignment="CENTER_LEFT" style="-fx-background-color: white;">
               <children>
                  <HBox alignment="CENTER_LEFT" minHeight="48.0" prefHeight="48.0" spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onBackAction" prefHeight="32.0" prefWidth="60.0" styleClass="round-white-button" text="Back" />
                        <Label fx:id="projectName" styleClass="label-big" text="Project Name" HBox.hgrow="ALWAYS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="28.0" spacing="4.0" styleClass="round-white-button">
                           <children>
                              <Circle fx:id="circle" fill="DODGERBLUE" radius="8.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                              <Label fx:id="statusLabel" styleClass="label-big-regular" text="Status" HBox.hgrow="ALWAYS" />
                           </children>
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER" spacing="8.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" style="-fx-background-color: #cccccc, white; -fx-background-insets: 0, 0 0 1 0;">
               <children>
                  <StackPane alignment="BOTTOM_LEFT" maxWidth="-Infinity" prefHeight="48.0" prefWidth="1000.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <ToggleButton fx:id="toggleDetails" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" selected="true" styleClass="tab-option" text="SUMMARY" />
                              <ToggleButton fx:id="toggleUpdates" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="tab-option" text="UPDATES" />
                              <ToggleButton fx:id="togglePhotos" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="tab-option" text="PHOTOS" />
                              <ToggleButton fx:id="toggleMaps" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="tab-option" text="MAPS" />
                           </children>
                        </HBox>
                        <Rectangle fx:id="rectangle" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="4.0" stroke="BLACK" strokeType="INSIDE" styleClass="indicator" translateX="200.0" width="150.0" />
                     </children>
                  </StackPane>
               </children>
            </VBox>
            <StackPane fx:id="stackPane" prefHeight="150.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </StackPane>
         </children>
      </VBox>
   </children>
</StackPane>
