<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" styleClass="projects-bg" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="toolbar" alignment="CENTER_LEFT" maxHeight="40.0" prefHeight="40.0" spacing="8.0" styleClass="menu-panel">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" styleClass="mug-bg" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="428.0" prefWidth="546.0" spacing="8.0">
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
               <children>
                  <Label text="Project Code &amp; Name" />
                  <HBox fx:id="codeBox" alignment="CENTER_LEFT" spacing="8.0">
                     <children>
                        <TextField fx:id="projectCodeField" maxWidth="-Infinity" prefWidth="400.0" promptText="Project Code" />
                     </children>
                  </HBox>
                  <HBox fx:id="nameBox" alignment="CENTER_LEFT" spacing="8.0">
                     <children>
                        <TextField fx:id="projectNameField" maxWidth="-Infinity" prefWidth="400.0" promptText="Project Name" />
                     </children>
                  </HBox>
                  <Label text="Project Location" />
                  <ComboBox fx:id="provinceComboBox" editable="true" prefWidth="400.0" promptText="Province" />
                  <ComboBox fx:id="cityComboBox" editable="true" prefWidth="400.0" promptText="City or Municipality" />
                  <ComboBox fx:id="streetComboBox" editable="true" prefWidth="400.0" promptText="Street and/or Barangay" />
                  <Label text="Date Started &amp; Date of Completion" />
                  <HBox alignment="CENTER" maxWidth="400.0" spacing="8.0">
                     <children>
                        <DatePicker fx:id="startedDatePicker" prefHeight="25.0" prefWidth="195.0" promptText="Date Started" HBox.hgrow="ALWAYS" />
                        <DatePicker fx:id="completionDatePicker" prefHeight="25.0" prefWidth="197.0" promptText="Date of Completion" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <Label text="Project Status" />
                  <ComboBox fx:id="statusComboBox" prefWidth="400.0" />
                  <HBox fx:id="actionBox" alignment="BOTTOM_RIGHT" maxWidth="-Infinity" prefHeight="40.0" prefWidth="400.0" spacing="8.0" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </HBox>
   </children>
</VBox>
