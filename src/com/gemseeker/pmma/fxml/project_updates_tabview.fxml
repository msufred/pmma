<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="1200.0" styleClass="background" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="8.0" styleClass="card">
         <children>
            <Label styleClass="label-details-main" text="Project Name" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding></VBox>
      <HBox alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="200.0" spacing="5.0" styleClass="background">
         <children>
            <Button mnemonicParsing="false" onAction="#onAddAction" prefHeight="32.0" prefWidth="90.0" text="New">
               <styleClass>
                  <String fx:value="default-button" />
                  <String fx:value="icon-button" />
                  <String fx:value="add-button" />
               </styleClass>
            </Button>
            <Button fx:id="editBtn" disable="true" mnemonicParsing="false" onAction="#onEditAction" prefHeight="32.0" prefWidth="90.0" text="Edit">
               <styleClass>
                  <String fx:value="default-button" />
                  <String fx:value="icon-button" />
                  <String fx:value="edit-button" />
               </styleClass>
            </Button>
            <Button fx:id="deleteBtn" disable="true" mnemonicParsing="false" onAction="#onDeleteAction" prefHeight="32.0" prefWidth="90.0" text="Delete">
               <styleClass>
                  <String fx:value="default-button" />
                  <String fx:value="icon-button" />
                  <String fx:value="delete-button" />
               </styleClass>
            </Button>
            <Button fx:id="viewBtn" disable="true" mnemonicParsing="false" onAction="#onViewAction" prefHeight="32.0" prefWidth="140.0" text="View Details">
               <styleClass>
                  <String fx:value="default-button" />
                  <String fx:value="icon-button" />
                  <String fx:value="view-button" />
               </styleClass>
            </Button>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <TableView fx:id="updatesTable" prefHeight="200.0" prefWidth="200.0" styleClass="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="levelCol" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" styleClass="centered-column" text="Level" />
          <TableColumn fx:id="dateCol" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" sortType="DESCENDING" styleClass="date-column" text="Date" />
          <TableColumn fx:id="remarksCol" prefWidth="75.0" styleClass="default-table-column" text="Remarks" />
            <TableColumn fx:id="attachmentCol" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" styleClass="centered-column" />
            <TableColumn fx:id="statusCol" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" styleClass="centered-column" text="Status" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
