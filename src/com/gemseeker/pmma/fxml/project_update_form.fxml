         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" prefHeight="48.0" spacing="8.0">
         <children>
            <ComboBox fx:id="level" prefHeight="32.0" prefWidth="200.0" promptText="Level" HBox.hgrow="ALWAYS" />
