               </children>
            </HBox>
            <StackPane styleClass="background">
               <children>
                  <HBox fx:id="attachmentBox" alignment="CENTER_LEFT" prefHeight="120.0" prefWidth="200.0" spacing="4.0" style="-fx-background-color: #f0f0f0;">
