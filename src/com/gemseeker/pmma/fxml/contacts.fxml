<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1200.0" styleClass="background" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" styleClass="card">
               <children>
                  <HBox alignment="CENTER" maxWidth="-Infinity" prefWidth="500.0" spacing="4.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <Label prefHeight="28.0" prefWidth="28.0" styleClass="search-label-icon" />
                        <TextField fx:id="searchField" prefHeight="32.0" promptText="Search Contact" styleClass="search-field" HBox.hgrow="ALWAYS" />
                        <Button fx:id="addBtn" mnemonicParsing="false" onAction="#onAddAction" prefHeight="32.0" prefWidth="32.0">
                           <styleClass>
                              <String fx:value="default-button" />
                              <String fx:value="add-button" />
                           </styleClass>
                        </Button>
                        <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#onDeleteAction" prefHeight="32.0" prefWidth="32.0">
                           <styleClass>
                              <String fx:value="default-button" />
                              <String fx:value="delete-button" />
                           </styleClass>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </HBox>
                  <ListView fx:id="contactsList" maxWidth="-Infinity" prefHeight="200.0" prefWidth="500.0" styleClass="contacts-listview" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ListView>
               </children>
               <HBox.margin>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </HBox.margin>
            </VBox>
            <StackPane fx:id="container" prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </StackPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
