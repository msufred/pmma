<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="formContainer" prefWidth="446.0" spacing="8.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox spacing="8.0" styleClass="card">
               <children>
                  <Label styleClass="card-title" text="Contact Details" />
                  <TextField fx:id="nameField" minHeight="-Infinity" prefHeight="32.0" promptText="Name" styleClass="form-text-field" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="companyField" minHeight="-Infinity" prefHeight="32.0" promptText="Company" styleClass="form-text-field" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="addressField" minHeight="-Infinity" prefHeight="32.0" promptText="Address" styleClass="form-text-field" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </VBox>
            <VBox spacing="8.0" styleClass="card">
               <children>
                  <Label styleClass="card-title" text="Contact Number" HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="6.0">
                     <children>
                        <TextField fx:id="numberField" minHeight="-Infinity" prefHeight="32.0" promptText="Phone or Mobile Number" styleClass="form-text-field" HBox.hgrow="ALWAYS" />
                        <ComboBox prefHeight="32.0" prefWidth="120.0" promptText="Type" />
                        <Button fx:id="addNumBtn" disable="true" mnemonicParsing="false" onAction="#addNumberAction" styleClass="default-button" text="+" />
                     </children>
                  </HBox>
                  <ListView fx:id="numbersList" prefHeight="200.0" prefWidth="200.0" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </VBox>
            <VBox spacing="8.0" styleClass="card">
               <children>
                  <Label styleClass="card-title" text="Email" />
                  <HBox alignment="CENTER" spacing="6.0">
                     <children>
                        <TextField fx:id="emailField" minHeight="-Infinity" prefHeight="32.0" promptText="Email Address" styleClass="form-text-field" HBox.hgrow="ALWAYS" />
                        <ComboBox prefHeight="32.0" prefWidth="120.0" promptText="Type" />
                        <Button fx:id="addEmailBtn" disable="true" mnemonicParsing="false" styleClass="default-button" text="+" />
                     </children>
                  </HBox>
                  <ListView fx:id="emailsList" prefHeight="200.0" prefWidth="200.0" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="cancelBtn" minHeight="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" styleClass="cancel-button" text="CANCEL" />
            <Button fx:id="saveBtn" minHeight="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" styleClass="ok-button" text="SAVE" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
   </children>
</VBox>
